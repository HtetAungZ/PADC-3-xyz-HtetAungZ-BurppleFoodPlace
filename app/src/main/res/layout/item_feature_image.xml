<?xml version="1.0" encoding="utf-8"?>
<com.padcmyanmar.burpple.viewitems.ImageFeatureViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_full">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_feature_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_dark"
            android:alpha="0.6"
            android:scaleType="centerCrop"
            android:src="@drawable/img_food_picture" />


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/rectangle_border"
            android:padding="6dp"
            android:text="FEATURES"
            android:textAlignment="center"
            android:textColor="@color/pale_green"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_type_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dp"
            android:text="@string/type_main_title"
            android:textColor="@color/white_full"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_type_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type_main_title"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:text="@string/type_sub_title"
            android:textColor="@color/white_full"
            android:textSize="16dp" />


    </RelativeLayout>


</com.padcmyanmar.burpple.viewitems.ImageFeatureViewItem>