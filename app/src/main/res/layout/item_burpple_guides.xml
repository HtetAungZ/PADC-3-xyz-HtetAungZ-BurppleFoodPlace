<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/card_view_width" android:layout_height="160dp"
    android:layout_margin="8dp"
    android:background="@android:color/background_dark">




<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="centerCrop"
    android:alpha="0.5"
    android:src="@drawable/img_burpple_guide_food"
    android:id="@+id/iv_guide_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_guide_title"
        android:layout_centerInParent="true"
        android:text="China Town"
        android:autoSizeMaxTextSize="10sp"
        android:textAlignment="center"
        android:textColor="@color/white_full"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_guide_desc"
        android:textAlignment="center"
        android:layout_below="@id/tv_guide_title"
        android:text="Hamburger"
        android:maxLines="1"
        android:textColor="@color/white_full"
        android:layout_centerInParent="true"/>



</RelativeLayout>