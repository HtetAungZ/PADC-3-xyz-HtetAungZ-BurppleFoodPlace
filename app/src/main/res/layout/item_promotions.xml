<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/card_view_width"
    android:layout_margin="8dp"
    android:layout_height="200dp"
    android:background="@color/orange_pale">


    <ImageView
        android:id="@+id/iv_food_detail"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:alpha=".8"
        android:src="@drawable/img_food_detail" />

    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="24dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_promotion_title"
        android:id="@+id/tv_exclusive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/orange_pale"
        android:padding="4dp"
        android:textStyle="bold"
        android:textColor="@color/white_full"
        android:textSize="12sp"
        android:text="BURPPLE EXCLUSIVE" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_above="@id/tv_type"
        android:id="@+id/tv_promotion_title"
        android:maxLength="20"
        android:layout_alignLeft="@id/tv_exclusive"
        android:layout_marginTop="8dp"
        android:layout_alignRight="@id/tv_exclusive"
        android:textStyle="bold"
        android:textColor="@color/white_full"
        android:textSize="16sp"
        android:text="1-for-1 Shabu"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_due_date"
        android:id="@+id/tv_type"
        android:autoSizeMaxTextSize="10sp"
        android:layout_alignLeft="@id/tv_exclusive"
        android:layout_alignRight="@id/tv_exclusive"
        android:textStyle="bold"
        android:textColor="@color/white_full"
        android:textSize="16sp"
        android:text="Burgers"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:id="@+id/view_separator"
        android:layout_alignLeft="@id/tv_exclusive"
        android:layout_below="@id/tv_type"
        android:background="@color/white_full"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_due_date"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@id/tv_exclusive"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        android:maxLength="10"
        android:textColor="@color/white_full"
        android:textSize="12sp"
        android:layout_alignBottom="@id/iv_food_detail"
        android:text="Till 31st JAN'18"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_food_detail"
        android:layout_alignLeft="@id/tv_exclusive"
        android:id="@+id/tv_ingredients"
        android:textStyle="bold"
        android:ellipsize="end"
        android:textColor="@color/white_full"
        android:textSize="12sp"
        android:text="Wildfire Chicken &amp; Potato chips"
        android:maxLines="1"
        android:layout_alignRight="@id/tv_exclusive"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ingredients"
        android:layout_alignLeft="@id/tv_exclusive"
        android:textStyle="bold"
        android:id="@+id/tv_shop_area"
        android:textColor="@color/white_full"
        android:textSize="12sp"
        android:text="Kent Ridge"
        android:layout_alignRight="@id/tv_exclusive"
        />


</RelativeLayout>