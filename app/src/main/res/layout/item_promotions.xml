<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_margin="12dp"
    android:layout_height="230dp"
    android:background="@color/orange_pale">


    <ImageView
        android:id="@+id/iv_food_detail"
        android:layout_width="230dp"
        android:layout_height="170dp"
        android:background="@android:color/transparent"
        android:scaleType="fitStart"
        android:src="@drawable/img_food_detail" />

    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/tv_exclusive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/orange_pale"
        android:padding="4dp"
        android:textStyle="bold"
        android:textColor="@color/white_full"
        android:textSize="12sp"
        android:text="BURPPLE EXCLUSIVE" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_exclusive"
        android:id="@+id/tv_discount"
        android:layout_alignLeft="@id/tv_exclusive"
        android:layout_marginTop="8dp"
        android:layout_alignRight="@id/tv_exclusive"
        android:textStyle="bold"
        android:textColor="@color/white_full"
        android:textSize="18sp"
        android:text="1-for-1 Shabu Burger"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:id="@+id/view_separator"
        android:layout_alignLeft="@id/tv_exclusive"
        android:layout_below="@id/tv_discount"
        android:background="@color/white_full"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_separator"
        android:id="@+id/tv_due_date"
        android:layout_alignLeft="@id/tv_exclusive"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textColor="@color/white_full"
        android:textSize="18sp"
        android:text="Till 31st JAN'18"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_due_date"
        android:layout_alignLeft="@id/tv_exclusive"
        android:id="@+id/tv_ingredients"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="@color/white_full"
        android:textSize="14sp"
        android:text="Wildfire Chicken &amp; Potato chips"
        android:maxEms="20"
        android:layout_alignRight="@id/tv_exclusive"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ingredients"
        android:layout_alignLeft="@id/tv_exclusive"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textColor="@color/white_full"
        android:textSize="12sp"
        android:text="Kent Ridge"
        android:layout_alignRight="@id/tv_exclusive"
        />


</RelativeLayout>